@{
    ViewBag.Title = "經費表單申請";
}

<body><br>
    <div class="container-sm">
        <div class="container">
            <div class="row">
                <div class="col-12 col-md-6">
                    <div class="item">
                        <p style="font-size: x-large;"><b><u>經費表單申請</u></b></p>
                        <p>
                            <label for="uesrName"><b>員工姓名 :</b></label>
                            <input type='text' class='whenToSet' id="uesrName">
                        </p>
                        <p>

                            <label for="moneytype"><b>費用說明 :</b></label>
                            <input type='text' class='whenToSet' id="moneytype">
                        </p>
                        <p>
                            <label for="howmuch"><b>支出金額 :</b></label>
                            <input type='text' class='whenToSet' id="howmuch">
                        </p>
                        <div class="bottom">
                            <p>
                                <label for="reason"><b>發票上傳 :</b></label>
                                <small><br> ( 一次只能上傳一份，僅限jpg或png檔案 ) <br></small>
                            </p>
                            <!-- 選擇檔案上傳start -->
                            <input id="FileUp" class="FileUp" type="file" name="ff" style="display:none">
                            <span class="FileUpBtn">選擇檔案</span>
                            <spal class="FileUpFileName">未選擇檔案</spal>
                            <!-- 上傳檔案預覽開始 -->
                            <div>
                                <img class="preview" style="max-width: 150px; max-height: 150px;">
                                <div class="size"></div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- 上傳檔案預覽結束 -->
                <div class="col-12 col-md-6">
                    <div class="item">
                        <form>
                            <div>
                                <p style="font-size: x-large;"><b><u>經費申請流程 :</u></b></p>
                                <p>
                                    <b>統一編號 : 22886699</b><br>
                                    如因特殊情形無法取得收據者，請於三天內與會計部聯繫。
                                </p>
                                <img src="~/photo/paymoney.jpg" style="width:90%;">
                                <br><br>
                                <div class="btn-group"><button id="demo3">送出申請</button></div>
                                <br><br>
                                <br><br>
                            </div>
                        </form>
                    </div>
                </div>
                <script>
                    //觸發原本上傳按鈕
                    $('.FileUpBtn').click(function () {
                        document.getElementById("FileUp").click();
                        //$("#xyzFileUp").click();
                    });
                    //顯示上傳檔案檔名
                    $(".FileUp").on("change", function () {
                        var filePath = $(this).val();
                        var arr = filePath.split('\\');
                        var fileName = arr[arr.length - 1];
                        $(".FileUpFileName").html(fileName);
                    });
                </script>
                <!-- 選擇檔案上傳end -->
                <script>
                    $(function () {

                        function format_float(num, pos) {
                            var size = Math.pow(10, pos);
                            return Math.round(num * size) / size;
                        }

                        function preview(input) {

                            if (input.files && input.files[0]) {
                                var reader = new FileReader();

                                reader.onload = function (e) {
                                    $('.preview').attr('src', e.target.result);
                                    var KB = format_float(e.total / 1024, 2);
                                    $('.size').text("檔案大小：" + KB + " KB");
                                }

                                reader.readAsDataURL(input.files[0]);
                            }
                        }

                        $("body").on("change", ".FileUp", function () {
                            preview(this);
                        })

                    })
                </script>
                <!-- 上傳檔案預覽js end -->
            </div>
            <div>
                <div class="footer">
                    <p> Copyright © 2021 SMIT14 team3 All right reserved. </p>
                </div>
            </div>
        </div>
    </div>
    </div>
</body>

